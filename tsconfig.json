{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020", // generate ESM
    "moduleResolution": "Node", // Node.js environment
    "declaration": false,
    "outDir": "./dist", // build directory
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true // import legacy CJS modules
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules", "tests", "example"]
}
